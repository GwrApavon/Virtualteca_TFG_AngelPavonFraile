<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/moving_buttons"
            android:layout_width="340dp"
            android:layout_height="62dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp">

            <Button
                android:id="@+id/home_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:contentDescription="@string/Nothing"
                app:icon="@drawable/house_solid"
                app:iconTint="@color/black"
                app:strokeColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/book_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:contentDescription="@string/Nothing"
                app:icon="@drawable/book_solid"
                app:iconTint="@color/black"
                app:strokeColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/partner_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:contentDescription="@string/Nothing"
                app:icon="@drawable/person_solid"
                app:iconTint="@color/black"
                app:strokeColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/loan_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:contentDescription="@string/Nothing"

                app:icon="@drawable/book_open_reader_solid"
                app:iconTint="@color/black"
                app:strokeColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <SearchView
            android:id="@+id/bookBrowser"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <ListView
            android:id="@+id/book_list"
            android:layout_width="match_parent"
            android:layout_height="520dp"
            />

        <Button
            android:id="@+id/b_add1"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="24dp"
            android:text="@string/add"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            app:strokeColor="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>